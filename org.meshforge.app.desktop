[Desktop Entry]
Version=1.0
Type=Application
Name=MeshForge
GenericName=Mesh Network Manager
Comment=LoRa Mesh Network Development & Operations Suite
Exec=x-terminal-emulator -e "sudo python3 /opt/meshforge/src/launcher.py"
Icon=org.meshforge.app
Terminal=false
Categories=Network;System;
Keywords=meshtastic;lora;mesh;radio;network;
StartupNotify=true
StartupWMClass=org.meshforge.app
Actions=gtk;web;tui;

[Desktop Action gtk]
Name=GTK Interface (Direct)
Exec=/opt/meshforge/scripts/meshforge-launcher.sh gtk

[Desktop Action web]
Name=Web Interface
Exec=x-terminal-emulator -e "/opt/meshforge/scripts/meshforge-launcher.sh web"

[Desktop Action tui]
Name=Terminal TUI
Exec=x-terminal-emulator -e "/opt/meshforge/scripts/meshforge-launcher.sh tui"
