# Meshtasticd Interactive Installer - Raspberry Pi Environment Configuration
# Copy this file to .env and modify as needed
# Usage: cp .env.example .env

# =============================================================================
# MESHTASTICD CONFIGURATION
# =============================================================================

# Meshtasticd service configuration path
MESHTASTICD_CONFIG_PATH=/etc/meshtasticd/config.yaml

# Default log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# HARDWARE CONFIGURATION
# =============================================================================

# SPI configuration for LoRa HATs
# Uncomment and modify for your specific HAT

# --- MeshAdv-Mini (SX1262/SX1268) ---
#LORA_CS_PIN=8
#LORA_IRQ_PIN=16
#LORA_BUSY_PIN=20
#LORA_RESET_PIN=24
#LORA_RXEN_PIN=12

# --- Waveshare SX1262 ---
#LORA_CS_PIN=21
#LORA_IRQ_PIN=16
#LORA_BUSY_PIN=20
#LORA_RESET_PIN=18

# --- Adafruit RFM9x ---
#LORA_CS_PIN=7
#LORA_IRQ_PIN=25
#LORA_RESET_PIN=17

# =============================================================================
# GPS CONFIGURATION (if available)
# =============================================================================

# GPS serial port (for HATs with GPS module)
#GPS_SERIAL_PORT=/dev/ttyS0
#GPS_BAUD_RATE=9600
#GPS_ENABLE_PIN=4

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Web installer port
WEB_INSTALLER_PORT=8080

# MQTT settings (if using MQTT bridge)
#MQTT_ENABLED=false
#MQTT_SERVER=mqtt.meshtastic.org
#MQTT_USERNAME=
#MQTT_PASSWORD=
#MQTT_ROOT_TOPIC=msh/US

# =============================================================================
# REGION AND RADIO SETTINGS
# =============================================================================

# LoRa region (US, EU_868, EU_433, CN, JP, ANZ, KR, TW, RU, IN)
LORA_REGION=US

# Default modem preset (LONG_FAST, MEDIUM_FAST, SHORT_FAST, etc.)
DEFAULT_MODEM_PRESET=MEDIUM_FAST

# Default channel slot for community networks
DEFAULT_CHANNEL_SLOT=0

# =============================================================================
# UPDATE SETTINGS
# =============================================================================

# Automatic update check interval in hours (0 to disable)
UPDATE_CHECK_INTERVAL=24

# Include beta releases in update checks
INCLUDE_BETA_UPDATES=false

# =============================================================================
# INSTALLER SETTINGS
# =============================================================================

# Enable debug mode for verbose output
DEBUG_MODE=false

# Installer log file location
INSTALLER_LOG_PATH=/var/log/meshtasticd-installer.log

# Error log file location
ERROR_LOG_PATH=/var/log/meshtasticd-installer-error.log

# Skip hardware detection (useful for testing)
SKIP_HARDWARE_DETECTION=false

# =============================================================================
# UI SETTINGS
# =============================================================================

# Enable emoji display in the UI (true, yes, 1 to enable)
# Set this to true if your terminal supports emoji
# Use: export ENABLE_EMOJI=true && sudo -E python3 src/main.py
ENABLE_EMOJI=false

# Disable emoji display (overrides ENABLE_EMOJI if set)
# DISABLE_EMOJI=false
